<form action="/new_bit" method="POST">
  <div class="form-group">
    <label for="title">Bit Title:</label>
    <input id="title" class="form-control" type="text" name="title" placeholder="Bit title">
  </div>
  <div class="form-group">
    <label for="content">Content:</label>
    <textarea id="content" class="form-control" name="content" placeholder="Write some text..."></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Post Bit</button>
</form>
