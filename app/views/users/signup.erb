<div class="signup-background"></div>
<% if @errors %>
  <% @errors.each do |e| %>
    <div class="stuck-together-alert alert alert-danger" role="alert">
      <%= "#{e.to_s.capitalize} already in use!" %>
    </div>
  <% end %>
<% end %>
<div class="container signup-container">
  <div class="signup-form-container">
    <div id="signup-header"><h1 id="registration-header">Sign Up</h1></div>
    <div class="form-container">
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="username">Username:</label>
          <input id="username" class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input id="email" class="form-control" type="text" name="email" placeholder="email">
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input id="password" class="form-control" type="password" name="password" placeholder="password">
        </div>
          <button id="submit-button" type="submit" class="btn btn-primary">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
